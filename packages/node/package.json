{
  "name": "@byor/node",
  "version": "0.1.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "mocha",
    "clean": "rm -rf build",
    "prebuild": "yarn clean",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "yarn build:database",
    "build:database": "drizzle-kit generate:sqlite --breakpoints --schema src/db/schema.ts --out build/db/migrations",
    "format:fix": "prettier --write .",
    "format": "prettier --check .",
    "lint:fix": "yarn lint --fix",
    "lint": "eslint --ext .ts,.tsx --max-warnings 0 src scripts",
    "seeder": "node -r esbuild-register scripts/seeder"
  },
  "devDependencies": {
    "drizzle-kit": "^0.17.6",
    "earl": "^1.1.0",
    "esbuild": "^0.17.18",
    "esbuild-register": "^3.4.2"
  },
  "dependencies": {
    "@byor/shared": "*",
    "@types/better-sqlite3": "^7.6.4",
    "better-sqlite3": "^8.3.0",
    "cmd-ts": "^0.12.1",
    "drizzle-orm": "^0.25.4",
    "viem": "^0.3.22"
  }
}
