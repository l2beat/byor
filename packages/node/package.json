{
  "name": "@byor/node",
  "version": "0.1.0",
  "private": true,
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "mocha",
    "clean": "rm -rf build",
    "prebuild": "yarn clean",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "yarn build:database",
    "build:database": "drizzle-kit generate:sqlite --breakpoints --schema src/db/schema.ts --out db/migrations",
    "start": "node -r esbuild-register src/",
    "format:fix": "prettier --write .",
    "format": "prettier --check .",
    "lint:fix": "yarn lint --fix",
    "lint": "eslint --ext .ts,.tsx --max-warnings 0 src scripts",
    "typecheck": "tsc --noEmit",
    "seeder": "node -r esbuild-register scripts/seeder"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.12",
    "drizzle-kit": "^0.17.6",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@byor/shared": "*",
    "@trpc/server": "^10.28.1",
    "@types/better-sqlite3": "^7.6.4",
    "@types/lodash": "^4.14.194",
    "abitype": "^0.8.4",
    "better-sqlite3": "^8.3.0",
    "cmd-ts": "^0.12.1",
    "drizzle-orm": "^0.25.4",
    "lodash": "^4.17.21",
    "viem": "^0.3.22",
    "zod": "^3.21.4"
  }
}
